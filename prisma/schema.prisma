datasource db {
  provider = "postgresql" // or "mysql", "sqlite", etc.
}

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String // hashed password
  role      String? // e.g., "admin", "user", "editor"
  status    String? // e.g., "active", "inactive"
  image     String? // profile image URL
  createdAt DateTime @default(now())
}

model AdminUser {
  id                  String              @id @default(cuid())
  email               String              @unique
  passwordHash        String
  name                String?
  avatar              String? // NEW: Profile picture
  role                Role                @default(EDITOR) // Changed to enum
  isActive            Boolean             @default(true) // NEW: Can disable without deleting
  refreshToken        String? // NEW: For JWT refresh
  lastLoginAt         DateTime?
  lastLoginIp         String? // NEW: Security tracking
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  repliedSubmissions  ContactSubmission[] @relation("RepliedBy")
  assignedSubmissions ContactSubmission[] @relation("AssignedTo")
}

enum Role {
  ADMIN // Full access
  EDITOR // Content management
  VIEWER // Read only
}

model ContactSubmission {
  id           String        @id @default(cuid())
  name         String
  phone        String?
  email        String
  subject      String? // NEW
  message      String        @db.Text
  status       MessageStatus @default(NEW) // Changed to enum
  priority     Priority      @default(NORMAL) // NEW
  replyContent String?       @db.Text // NEW: Admin's reply
  repliedAt    DateTime?
  repliedById  String? // NEW: Who replied
  repliedBy    AdminUser?    @relation("RepliedBy", fields: [repliedById], references: [id])
  ipAddress    String? // NEW
  userAgent    String? // NEW
  createdAt    DateTime      @default(now())
  adminUser    AdminUser?    @relation("AssignedTo", fields: [adminUserId], references: [id])
  adminUserId  String?
}

enum MessageStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
  SPAM
}

enum Priority {
  LOW
  NORMAL
  HIGH
  URGENT
}

model NewsletterSubscriber {
  id                String    @id @default(cuid())
  email             String    @unique
  firstName         String?
  lastName          String?
  source            String? // NEW: "donation_page", "footer", etc.
  ipAddress         String? // NEW: For spam prevention
  isVerified        Boolean   @default(false)
  verifyToken       String?   @unique
  unsubscribeToken  String    @unique @default(cuid())
  subscribedAt      DateTime  @default(now())
  verifiedAt        DateTime? // NEW
  unsubscribedAt    DateTime?
  unsubscribeReason String? // NEW: Why they left
}

enum DonationStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Donation {
  id            String         @id @default(cuid())
  amount        Decimal        @db.Decimal(10, 2)
  currency      String         @default("USD")
  category      String? // e.g., "General", "Education", "Healthcare", "Emergency"
  paymentMethod String? // e.g., "PayPal", "Bank Transfer", "Card", "Cash"
  notes         String? // Admin notes
  message       String? // Message from donor
  status        DonationStatus @default(PENDING)
  // Donor information
  firstName     String?
  lastName      String?
  email         String?
  phone         String?
  address       String?
  country       String?
  region        String?
  isAnonymous   Boolean        @default(false)
  acceptedTerms Boolean        @default(false)
  wantsUpdates  Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}
